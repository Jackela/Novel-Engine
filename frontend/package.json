{
  "name": "storyforge-ai-frontend",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "build:tokens": "node scripts/build-tokens.mjs",
    "lint": "eslint .",
    "lint:tsx:hex": "node scripts/lint-hex-tsx.mjs",
    "lint:all": "npm run lint && npm run lint:styles && npm run lint:tsx:hex",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "lint:styles": "stylelint \"src/**/*.{css,scss}\"",
    "tokens:check": "node scripts/check-tokens-contrast.mjs",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "test:safe": "node scripts/test-safe.js",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:safe": "node scripts/test-safe.js --coverage",
    "test:cleanup": "node scripts/test-cleanup.js",
    "test:single": "node scripts/test-safe.js",
    "test:e2e": "playwright test && node scripts/generate-experience-report.mjs",
    "test:e2e:character": "playwright test character-creation.spec.ts",
    "test:e2e:narrative": "playwright test narrative-generation.spec.ts",
    "test:e2e:smoke": "playwright test --grep \"@experience-offline|@landing-smoke|@weaver-smoke\" && node scripts/generate-experience-report.mjs",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:uat": "ts-node --esm tests/e2e/run-uat.ts",
    "test:uat:ci": "ts-node --esm tests/e2e/run-uat.ts --ci",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "type-check": "tsc -p tsconfig.typecheck.json --noEmit",
    "size": "size-limit",
    "pretest": "node scripts/test-cleanup.js",
    "posttest": "node scripts/test-cleanup.js"
  },
  "size-limit": [
    {
      "name": "Initial Bundle",
      "path": "dist/assets/index-*.js",
      "limit": "400 KB",
      "gzip": true
    },
    {
      "name": "Route Chunks",
      "path": "dist/assets/*-*.js",
      "limit": "200 KB",
      "gzip": true,
      "ignore": [
        "dist/assets/index-*.js",
        "dist/assets/vendor-*.js"
      ]
    }
  ],
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@reduxjs/toolkit": "^1.9.5",
    "@tanstack/react-query": "^5.90.19",
    "@tanstack/react-query-devtools": "^5.91.2",
    "@tanstack/react-router": "^1.151.6",
    "@xyflow/react": "^12.10.0",
    "axios": "^1.11.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.1",
    "i18next": "^23.5.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.562.0",
    "markdown-it": "^14.1.0",
    "playwright": "^1.55.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hook-form": "^7.71.1",
    "react-i18next": "^13.2.2",
    "react-query": "^3.39.3",
    "react-redux": "^8.1.2",
    "react-router-dom": "^6.15.0",
    "react-window": "^1.8.8",
    "react-window-infinite-loader": "^1.0.9",
    "socket.io-client": "^4.7.2",
    "tailwind-merge": "^3.4.0",
    "use-debounce": "^9.0.4",
    "web-vitals": "^4.2.4",
    "zod": "^4.3.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@axe-core/react": "^4.11.0",
    "@eslint/js": "^9.30.1",
    "@lhci/cli": "^0.14.0",
    "@playwright/test": "^1.54.1",
    "@size-limit/file": "^11.1.0",
    "@testing-library/jest-dom": "^6.1.2",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-window": "^1.8.8",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.30.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jest-axe": "^9.0.0",
    "jsdom": "^24.1.0",
    "msw": "^2.12.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "rollup": "^3.29.5",
    "rollup-plugin-visualizer": "^5.14.0",
    "size-limit": "^11.1.0",
    "stylelint": "^16.10.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.19",
    "tailwindcss-animate": "^1.0.7",
    "terser": "^5.44.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.5.5",
    "vitest": "^4.0.15",
    "yaml": "^2.8.2"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
