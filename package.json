{
  "name": "novel-engine",
  "version": "0.1.1",
  "description": "AI-Enhanced Interactive Novel Engine",
  "private": true,
  "author": "Jackela",
  "license": "MIT",
  "scripts": {
    "build": "npm --prefix frontend run build",
    "format": "npm --prefix frontend run format",
    "format:check": "npm --prefix frontend run format:check",
    "lint": "npm --prefix frontend run lint:all",
    "type-check": "npm --prefix frontend run type-check",
    "test": "pytest && npm --prefix frontend run test && npm --prefix frontend run test:integration && npm --prefix frontend run test:e2e:smoke",
    "ci": "npm run format:check && powershell -ExecutionPolicy Bypass -File scripts/validate_ci_locally.ps1",
    "dev:daemon": "bash scripts/dev_env_daemon.sh",
    "dev:stop": "bash scripts/stop_dev_env.sh"
  },
  "dependencies": {
    "@xyflow/react": "^12.10.0",
    "chrome-remote-interface": "^0.33.3",
    "claude": "^0.1.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "markdown-it": "^14.1.0",
    "playwright": "^1.55.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.10"
  }
}
