# Environment Variables Template
# Copy this to .env and update with your secure values
# NEVER commit actual secrets to version control

# Environment
ENVIRONMENT=development

# Security Keys - GENERATE NEW SECURE KEYS FOR PRODUCTION
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secure_secret_key_here
JWT_SECRET_KEY=your_secure_jwt_secret_key_here

# Admin Credentials - SET STRONG CREDENTIALS
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_strong_admin_password

# SSL Configuration (optional for development)
SSL_CERT_PATH=/path/to/your/certificate.pem
SSL_KEY_PATH=/path/to/your/private-key.pem

# Database Configuration
DATABASE_URL=sqlite:///data/development.db
DATABASE_PASSWORD=your_database_password

# API Configuration
API_HOST=localhost
API_PORT=8000
API_WORKERS=1

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring
LOG_LEVEL=DEBUG
ENABLE_METRICS=false
METRICS_PORT=9090

# ============================================
# ACT Local GitHub Actions Testing
# ============================================

# GitHub Actions Environment Simulation
CI=true
GITHUB_ACTIONS=true
GITHUB_WORKSPACE=/workspace
GITHUB_REPOSITORY=Jackela/Novel-Engine
GITHUB_REF=refs/heads/main
GITHUB_SHA=8abaf85fcaedcaf367084d3e76cb85547b96e726
GITHUB_ACTOR=local-dev
GITHUB_EVENT_NAME=push
GITHUB_RUN_ID=1
GITHUB_RUN_NUMBER=1

# Runner Environment
RUNNER_OS=Linux
RUNNER_ARCH=X64
RUNNER_TEMP=/tmp
RUNNER_TOOL_CACHE=/opt/hostedtoolcache

# Python Configuration for CI
PYTHON_VERSION=3.11
PYTHONUNBUFFERED=1
PIP_CACHE_DIR=/tmp/pip-cache
PIP_DISABLE_PIP_VERSION_CHECK=1

# Test Configuration
PYTEST_CURRENT_TEST=""
PYTEST_TIMEOUT=120

# Docker Configuration (for ACT)
DOCKER_HOST=unix:///var/run/docker.sock